{
  "registration_form": {

    "title": "Registration",
    "path": "/api/v1/registrations",
    "method": "POST",

    "fields": [
      {
        "type": "text",
        "value": "",
        "label": "Last Name *",
        "name": "first_name",
        "placeholder": "Enter first name",
        "required": "Hi TEAM, i came from backend to tell you that first name is required"
      },
      {
        "type": "text",
        "value": "",
        "label": "Last Name *",
        "name": "last_name",
        "placeholder": "Enter last name",
        "required": "This is required message for last name"
      },
      {
        "type": "select",
        "options": ["microsite 1", "microsite 2", "microsite 3"],
        "label": "Microsite  *",
        "name": "microsite",
        "placeholder": "Please select",
        "required": "This is required message for microsite"
      },
      {
        "type": "text",
        "label": "Country",
        "name": "country",
        "placeholder": "Enter country",
        "max_length": 4,
        "min_length": 2
      },
      {
        "type": "text",
        "label": "Street",
        "name": "street",
        "placeholder": "Enter street",
        "min_length": {
          "value": 3,
          "message": "Can not be shorter than 3"
        }
      },
      {
        "type": "password",
        "label": "Password",
        "name": "password",
        "placeholder": "Enter street",
        "min_length": {
          "value": 3,
          "message": "Can not be shorter than 3"
        }
      }
    ]
  }
}

